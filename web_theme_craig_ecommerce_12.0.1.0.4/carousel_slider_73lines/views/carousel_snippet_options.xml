<odoo>
    <!-- Snippet's Options -->
    <template id="s_object_carousel_option" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='carousel']" position="after">
            <div data-js='js_get_objects' data-selector=".js_get_objects" />

            <!-- Filter Options -->
            <div data-js='js_get_objects_selectFilter' data-selector=".js_get_objects">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#"  class="dropdown-item">Filter</a>
                    <div class="dropdown-menu filter_div" role="menu">
                        <li class="dropdown-item" role="menuitem" data-filter_by_filter_id="">
                            <a>No Filter</a>
                        </li>
                    </div>
                </div>
            </div>

            <!-- Total Object Limit Options -->
            <div data-js='js_get_objects_limit' data-selector=".js_get_objects">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#" class="dropdown-item">Number of Objects</a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item" role="menuitem" data-objects_limit="">
                            <a>All Objects</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="1">
                            <a>1</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="2">
                            <a>2</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="4">
                            <a>4</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="6">
                            <a>6</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="8">
                            <a>8</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="10">
                            <a>10</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="12">
                            <a>12</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_limit="15">
                            <a>15</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Total Row Displayed Options -->
            <div data-js='js_get_objects_in_row' data-selector=".js_get_objects">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#" class="dropdown-item">In Row</a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item" role="menuitem" data-objects_in_row="1">
                            <a>1</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_row="2">
                            <a>2</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_row="3">
                            <a>3</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Total Object Limit per Slide Options -->
            <div data-js='js_get_objects_in_slide' data-selector=".js_get_objects">
                <div class="dropdown-submenu">
                    <a tabindex="-1" href="#" class="dropdown-item">Objects in Each Slide</a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-item" role="menuitem" data-objects_in_slide="1">
                            <a>1</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_slide="2">
                            <a>2</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_slide="3">
                            <a>3</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_slide="4">
                            <a>4</a>
                        </li>
                        <li class="dropdown-item" role="menuitem" data-objects_in_slide="5">
                            <a>5</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Hide Headline Option -->
            <div data-js='js_get_objects_headline' data-selector=".js_get_objects">
                <div class="dropdown-divider"/>
                <a href="#" class="dropdown-item" data-toggle-class="headline_hidden">Hide Headline</a>
            </div>

        </xpath>
    </template>

</odoo>
