<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="brand_carousel_and_testimonials"
              name="Brand Carousel And Testimonials">
        <section class="mt8 mb8">
            <div class="container-fluid">
                <div class="row">
                    <div id="left_side_block"
                         class="col-lg-3 col-md-12 order-1">
                        <section class="side_testimonial">
                            <div class="mb-2 bg_white walter_side">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card">
                                            <h4 class="card-header">
                                                <a data-toggle="collapse"
                                                   href="#testimonial">
                                                    Testimonials
                                                    <i class="fa fa-plus pull-right"/>
                                                </a>
                                            </h4>
                                            <div id="testimonial"
                                                 class="collapse show">
                                                <div class="card-body">
                                                    <div class="carousel slide s_carousel s_carousel_default"
                                                         id="testimonial_item">
                                                        <ol class="carousel-indicators">
                                                            <li data-target="#testimonial_item"
                                                                data-slide-to="0"
                                                                class="active"/>
                                                            <li data-target="#testimonial_item"
                                                                data-slide-to="1"/>
                                                        </ol>
                                                        <div class="carousel-inner">
                                                            <div class="carousel-item active">
                                                                <div class="testimonial_image">
                                                                    <img class="img img-fluid"
                                                                         src="/web_theme_craig_ecommerce/static/src/img/user1.jpg"
                                                                         alt="User1"/>
                                                                </div>
                                                                <div class="testimonial-user-title">
                                                                    <h5 class="o_default_snippet_text">
                                                                        john
                                                                        duff
                                                                    </h5>
                                                                    <span class="tttestimonial-subtitle  o_default_snippet_text">
                                                                        Producer
                                                                    </span>
                                                                </div>
                                                                <div class="testimonial-content ">
                                                                    <div class="testimonial-desc">
                                                                        <p class="o_default_snippet_text">
                                                                            Duis
                                                                            faucibus
                                                                            enim
                                                                            vitae
                                                                            nunc
                                                                            molestie,
                                                                            nec
                                                                            facilisis
                                                                            arcu
                                                                            pulvinar
                                                                            nullam
                                                                            mattis..
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="carousel-item">
                                                                <div class="testimonial_image">
                                                                    <img class="img img-fluid"
                                                                         src="/web_theme_craig_ecommerce/static/src/img/user2.jpg"
                                                                         alt="User2"/>
                                                                </div>
                                                                <div class="testimonial-user-title">
                                                                    <h5 class="o_default_snippet_text">
                                                                        john
                                                                        smith
                                                                    </h5>
                                                                    <span class="tttestimonial-subtitle  o_default_snippet_text">
                                                                        Developer
                                                                    </span>
                                                                </div>
                                                                <div class="testimonial-content ">
                                                                    <div class="testimonial-desc">
                                                                        <p class="o_default_snippet_text">
                                                                            Duis
                                                                            faucibus
                                                                            enim
                                                                            vitae
                                                                            nunc
                                                                            molestie,
                                                                            nec
                                                                            facilisis
                                                                            arcu
                                                                            pulvinar
                                                                            nullam
                                                                            mattis..
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="carousel-item">
                                                                <div class="testimonial_image">
                                                                    <img class="img img-fluid"
                                                                         src="/web_theme_craig_ecommerce/static/src/img/user3.jpg"
                                                                         alt="User3"/>
                                                                </div>
                                                                <div class="testimonial-user-title">
                                                                    <h5 class="o_default_snippet_text">
                                                                        john
                                                                        deo
                                                                    </h5>
                                                                    <span class="tttestimonial-subtitle  o_default_snippet_text">
                                                                        Producer
                                                                    </span>
                                                                </div>
                                                                <div class="testimonial-content ">
                                                                    <div class="testimonial-desc">
                                                                        <p class="o_default_snippet_text">
                                                                            Duis
                                                                            faucibus
                                                                            enim
                                                                            vitae
                                                                            nunc
                                                                            molestie,
                                                                            nec
                                                                            facilisis
                                                                            arcu
                                                                            pulvinar
                                                                            nullam
                                                                            mattis..
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="carousel-control-prev"
                                                             data-target="#testimonial_item"
                                                             data-slide="prev"
                                                             role="img"
                                                             aria-label="Previous"
                                                             title="Previous">
                                                            <span class="carousel-control-prev-icon"/>
                                                            <span class="sr-only o_default_snippet_text">
                                                                Previous
                                                            </span>
                                                        </div>
                                                        <div class="carousel-control-next"
                                                             data-target="#testimonial_item"
                                                             data-slide="next"
                                                             role="img"
                                                             aria-label="Next"
                                                             title="Next">
                                                            <span class="carousel-control-next-icon"/>
                                                            <span class="sr-only o_default_snippet_text">
                                                                Next
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section
                                class="s_product_carousel bg_white hr js_get_objects product_carousel add_to_cart_hidden wishlist_hidden"
                                data-loading="true"
                                data-template="snippet_product_carousel_73lines.product_list_template_mini"
                                data-object_name="product.template"
                                data-objects_limit="6"
                                data-objects_in_slide="1"
                                data-objects_in_row="3"/>
                        <section
                                class="s_product_carousel bg_white hr js_get_objects product_carousel add_to_cart_hidden wishlist_hidden"
                                data-loading="true"
                                data-template="snippet_product_carousel_73lines.product_list_template_mini"
                                data-object_name="product.template"
                                data-objects_limit="6"
                                data-objects_in_slide="1"
                                data-objects_in_row="3"/>
                    </div>
                    <div id="page_block_for_side_block"
                         class="col-lg-9 col-md-12 order-2">
                        <section
                                class="s_product_carousel mb8 js_get_objects product_carousel"
                                data-loading="true"
                                data-template="snippet_product_carousel_73lines.product_list_template"
                                data-object_name="product.template"
                                data-objects_limit="5"
                                data-objects_in_slide="4"/>
                        <section
                                class="s_blog_carousel js_get_objects"
                                data-loading="true"
                                data-template="snippet_blog_carousel_73lines.blog_list_template"
                                data-object_name="blog.post"/>
                        <section
                                class="s_brand_carousel mb8 js_get_objects"
                                data-loading="true"
                                data-template="snippet_product_brand_carousel_73lines.brand_list_template_header"
                                data-object_name="product.brand"
                                data-objects_in_slide="4"/>
                    </div>
                </div>

            </div>
        </section>
    </template>
</odoo>