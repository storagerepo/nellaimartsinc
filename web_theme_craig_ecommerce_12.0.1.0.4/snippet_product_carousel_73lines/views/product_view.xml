<odoo>

    <record model="ir.ui.view" id="product_template_form_view_carousel">
        <field name="name">product.template.product.carousel.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="sale" position="inside">
                <group>
                    <field name="is_new"/>
                    <field name="is_best_seller"/>
                    <field name="is_trending"/>
                    <field name="is_on_sale"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
