<odoo>

    <!-- Snippet & Thumbnail -->
    <template id="s_product_recent_carousel_place_in_tab" inherit_id="website.snippets">
        <xpath
                expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="snippet_recently_viewed_product_carousel_73lines.s_product_recent_view_carousel_header"
               t-thumbnail="/snippet_recently_viewed_product_carousel_73lines/static/src/img/s_product-recent-carousel-with-header.png" />
        </xpath>
    </template>

</odoo>
